[
  {
    "name": "E-commerce Platform",
    "description": "Building a modern e-commerce platform with React and Node.js",
    "status": "in_progress",
    "tasks": [
      {
        "title": "Build React Frontend",
        "description": "Create responsive UI components and pages",
